package com.TestPages;

import java.io.IOException;

import org.openqa.selenium.WebDriver;

import com.baseClass.BaseClass;
import com.helper.DataReaderManager;
import com.pom.HomePage;
import com.pom.PropertiesPage;

public class HotelTest {

	static WebDriver driver;
	static BaseClass base;
	HomePage hp;
	PropertiesPage pp;

	public HotelTest() {
		hp = new HomePage(driver);
		pp = new PropertiesPage(driver);
	}

	public void validate_5_Star_Rating() throws IOException {

		driver = base.browser_Launch("chrome");
		base.url_Launch(DataReaderManager.getInstanceDRM().getInstanceDR().getSourceUrl());

		hp.navigateToHotels();
		hp.enterDetailsToSearchHotel();
		pp.selectFilter();
		pp.validateHotelNames();

	}

}
